{
    "manifest_version": 3,
    "name": "Exotic Coinage",
    "version": "1.0",
    "description": "Calculate and store the total value of your coins.",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_icon": {
        "32": "icon32.png"
      }
    },
    "host_permissions": [  
      "http://example.com/",
      "https://example.com/"  
    ]
  }